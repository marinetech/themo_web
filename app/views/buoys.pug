extend default


block content


  

    .container
      
      each buoy in b_data
        h5 Buoy name: #{buoy.name} 
        h5 Depth: #{buoy.depth}m  
        h5 <a href='https://www.marinetraffic.com/en/ais/details/ships/shipid:5689729/mmsi:244010235/vessel:THEMO%20BOUY' target='_blank'> Location: 33.03314° / 34.94241°</a>
        <br> 
        <br>

        table
          thead
            tr
              th.chk_width
              th sensor
              th description
              th model

          tbody
            each sensor in s_data
              unless sensor.buoy_name != buoy.name
                <tr valign="top" onclick="rowClick(this)">
                  td <input type="checkbox" value="#{sensor._id}" class="chbox" onclick="this.checked=!this.checked"/>
                  td #{sensor.display_name}
                  td #{sensor.description}
                  td #{sensor.model}


        <br>
        <br>


        table
          thead
            tr
              th.chk_width
              th Start Date
              th End Date
              th

          tbody
            tr
              td
              td <input type="text" id="start_date" min="2017-07-01">
              td <input type="text" id="end_date" min="2017-17-02">
              td <button onclick="getReport()">Download</button>



    <br>
    <br>
    <br>
    <br>
    <br>



block scripts
  script(src='scripts/buoys.js')
