extend default

block content
  
  .main.container
   .row
     .col-md-6.col-md-offset-3
       h1.display-4.m-b-2 Sign Up
       
       -if(errors)
         each err in errors
           div.flash_err #{err.msg}
         <br>
         <br>

       // register form
       form(method='POST' action='/users/register')
         div.form-group
           label(for='firstname') First Name:
           input#name.form-control(type='text', name='firstname')
         div.form-group
           label(for='lastname') Last Name:
           input#name.form-control(type='text', name='lastname')
         div.form-group
           label(for='email') Email:
           input#email.form-control(type='email', name='email')         
         div.form-group
           label(for='password') Password:
           input#pw.form-control(type='password' name='password')
         div.form-group
           label(for='pw2') Confirm Password:
           input#pw2.form-control(type='password' name='password2')
         button.btn.btn-primary(type='submit') Sign up
